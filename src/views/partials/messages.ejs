<!-- Componente de Mensagens Flash -->
<% if (typeof successMessage !== 'undefined' && successMessage.length > 0) { %>
<div class="alert alert-success">
  <div class="alert-content">
    <span class="alert-icon">✓</span>
    <span class="alert-message"><%= successMessage[0] %></span>
    <button
      class="alert-close"
      onclick="this.parentElement.parentElement.style.display='none'"
    >
      &times;
    </button>
  </div>
</div>
<% } %> <% if (typeof errorMessage !== 'undefined' && errorMessage.length > 0) {
%>
<div class="alert alert-error">
  <div class="alert-content">
    <span class="alert-icon">⚠</span>
    <span class="alert-message"><%= errorMessage[0] %></span>
    <button
      class="alert-close"
      onclick="this.parentElement.parentElement.style.display='none'"
    >
      &times;
    </button>
  </div>
</div>
<% } %> <% if (typeof erro !== 'undefined' && erro) { %>
<div class="alert alert-error">
  <div class="alert-content">
    <span class="alert-icon">⚠</span>
    <span class="alert-message"><%= erro %></span>
    <button
      class="alert-close"
      onclick="this.parentElement.parentElement.style.display='none'"
    >
      &times;
    </button>
  </div>
</div>
<% } %>

<style>
  .alert {
    margin: 20px 0;
    padding: 0;
    border-radius: 6px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    animation: slideIn 0.3s ease-out;
  }

  .alert-success {
    background-color: #d4edda;
    border: 1px solid #c3e6cb;
  }

  .alert-error {
    background-color: #f8d7da;
    border: 1px solid #f5c6cb;
  }

  .alert-content {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    position: relative;
  }

  .alert-icon {
    font-size: 18px;
    margin-right: 12px;
    font-weight: bold;
  }

  .alert-success .alert-icon {
    color: #155724;
  }

  .alert-error .alert-icon {
    color: #721c24;
  }

  .alert-message {
    flex: 1;
    font-size: 14px;
    font-weight: 500;
  }

  .alert-success .alert-message {
    color: #155724;
  }

  .alert-error .alert-message {
    color: #721c24;
  }

  .alert-close {
    background: none;
    border: none;
    font-size: 20px;
    font-weight: bold;
    cursor: pointer;
    padding: 0;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: background-color 0.2s;
  }

  .alert-success .alert-close {
    color: #155724;
  }

  .alert-error .alert-close {
    color: #721c24;
  }

  .alert-close:hover {
    background-color: rgba(0, 0, 0, 0.1);
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Auto-hide após 5 segundos */
  .alert {
    animation: slideIn 0.3s ease-out, fadeOut 0.3s ease-in 4.7s forwards;
  }

  @keyframes fadeOut {
    to {
      opacity: 0;
      transform: translateY(-10px);
    }
  }
</style>
